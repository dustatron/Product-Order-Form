<%= form_tag(order_item_path(:id), method: "get") do %>
  <form>
    <div class="form-group">
      <label for="Item Number">Item Number</label>
      <%= text_field_tag(:q, nil, class: "form-control", placeholder: "Item Number") %>
    </div>

    <div class="form-group">
      <label for="Item Name">Item Name</label>
      <%= text_field_tag(:q, nil, class: "form-control", placeholder: "Item Name") %>
    </div>

    <select class="form-control">
      <label for="gender">Gender</label>
      <option>?</option>
      <option>Male</option>
      <option>Female</option>
    </select>

    <div class="checkbox">
      <label>
        <input type="checkbox"> Check me out
      </label>
    </div>
    <%= submit_tag("Add", class: "tn btn-lg btn-block btn-danger")%>

  </form>
<% end %>
