<%= form_for :item, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <form>
    <%= f.hidden_field :id, value: params[:id] %>

    <div class="form-group">
      <label for="Item Number">Artical Number</label>
      <%= f.text_field :number %>
    </div>

    <div class="form-group">
      <label for="Item Name">Artical Size</label>
      <%= f.text_field :size  %>
    </div>

    <div class="form-group">
      <label for="Item Name">Artical Gender</label>
      <%= f.text_field :gender %>
    </div>

    <div class="checkbox">
      <label>
        <input type="checkbox"> Check me out
      </label>
    </div>
    <%= f.submit "Add" %>

  </form>
<% end %>
