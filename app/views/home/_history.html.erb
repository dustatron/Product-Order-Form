<div class="row">

  <div class="col-md-6 col-md-offset-3 text-center">
      <h2>ORDER LIST</h2>

  </div>

</div>

<div class="row">
  <% @order.each do |order| %>
    <div class="well">
      <div class="col-md-4">
        <strong>Order :</strong><%= order.order_numbers %>
      </div>
      <div class="col-md-4 col-md-offset-4 text-right">
        <a href="#"><%= link_to 'Edit', edit_order_path(id: order.id) %></a> |
        <%= link_to 'Delete',  { action: :destroy, id: order.id },
       method: :delete,
       data: { confirm: "Delete this news?" }
       %>
      </div>

    </div>

  <%end%>
</div>
